<ul class="row list-unstyled wb-eqht-grd mrgn-tp-md pb-4">
	{% for month, results in analytics %}
	<li class="col-xs-12 col-md-6 mrgn-tp-md mrgn-bttm-md">
		<div class="brdr-tp brdr-rght brdr-bttm brdr-lft hght-inhrt">
			<h3 class="mrgn-tp-md mrgn-rght-md mrgn-bttm-md mrgn-lft-md">{{ month | formatYearMonth }}</h3> <!-- Format the 'month' -->
			<div class="mrgn-rght-md mrgn-bttm-md mrgn-lft-md">
				<dl>
					<dt>Sessions:</dt>
					<dd>{{ results.results[0].sessions }}</dd>

					<dt>Users:</dt>
					<dd>{{ results.results[0].newUsers }}</dd>

					<dt>Pageviews:</dt>
					<dd>{{ results.results[0].screenPageViews }}</dd>

					<dt>Bounce Rate:</dt>
					<dd>{{ results.results[0].bounceRate }}%</dd>

					<dt>Average Session Duration:</dt>
					<dd>{{ results.results[0].avgSessionDuration }} minutes</dd>

					<dt>Most used devices:</dt>
					<dd>
						<ul>
							{% for device in results.results[0].topDevices %}
							<li>{{ device.device }} - {{ device.percentage }}%</li>
							{% endfor %}
						</ul>
					</dd>

					<dt>Top 3 countries:</dt>
					<dd>
						<ul>
							{% for country in results.results[0].topCountries %}
							<li>{{ country }}</li>
							{% endfor %}
						</ul>
					</dd>
				</dl>
			</div>
		</div>
	</li>
	{% endfor %}
</ul>
